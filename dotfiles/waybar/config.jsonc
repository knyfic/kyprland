{
    "layer": "top",   
    "position": "top",
    "mod": "dock",
    "margin-left": 10,
    "margin-right": 10,
    "margin-top": 10,
    "exclusive": true,
    "passthrough": false,
    "gtk-layer-shell": true,
    "height": 44,
 //   "width": 1600, //
    "modules-left": ["wlr/workspaces","custom/rofi","hyprland/window"],
    "modules-center": ["custom/pomodoro","mpris"],
    "modules-right": ["network", "battery","clock", "cpu", "memory", "backlight","pulseaudio","pulseaudio#microphone", "tray"],
    "hyprland/window": {
        "format": "{}"
    },

    "wlr/workspaces": {
        "disable-scroll": true,
        "persistent_workspaces": {
            "1": [],
            "2": [],
            "3": [],
            "4": [],
        },
        //"all-outputs": true,//
        "format": "{icon}",
        "on-click": "activate",
        "format-icons": {  

            "urgent": "ÔÅ™",
            "focused": "ÔÜí",
            "default": "ÔÑë"
        }
     },  
    "keyboard-state": {
        "numlock": true,
        "capslock": true,
        "format": "{name} {icon}",
        "format-icons": {
            "locked": "ÔÄ£",
            "unlocked": "ÔÇú"
        }
    },
    
    "tray": {
        "icon-size": 18,
        "spacing": 10
    },
    "cpu" : {
      "interval": 1,
      "format": "Ôíº  {}%"
    },
    "memory": {
      "interval": 1,
      "format": "Óâ¶  {}%"
    },

    "clock": {
        "format": "{:ÔÄó %I:%M %p }",
        "format-alt":"{:ÔÅ≥ %a, %b %e}",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>"
    },

    "backlight": {
     //  you can see your device with this command "ls -1 /sys/class/backlight/" //
      "device": "intel_backlight",
      "format": "{icon} {percent}%",
      "format-icons": ["Ôóù", "Ôóû", "Ôóü"],
      "on-scroll-up": "light -A 2",
      "on-scroll-down": "light -U 2",
      "min-length": 6
    },

    "battery": {
        "states": {
            "good": 95,
            "warning": 30,
            "critical": 20
        },
        "format": "{icon} {capacity}%",
        "format-charging": "Ôá¶ {capacity}%",
        "format-plugged": "Ôá¶ {capacity}%",
        "format-alt": "{time} {icon}",
        "format-icons": ["Ôñç", "Ôïπ", "Ôï∫", "Ôïª", "Ôïº", "ÔïΩ", "Ôïæ", "Ôïø", "ÔñÄ", "ÔñÅ", "Ôï∏"]
    },

    "pulseaudio": {
        "format": "{icon} {volume}%",
        "tooltip": false,
        "format-muted": "ÔÄ¶ Muted",
        "on-click": "pamixer -t",
        "on-click-right": "exec pavucontrol",
        "on-scroll-up": "pamixer -i 2",
        "on-scroll-down": "pamixer -d 2",
        "scroll-step": 5,
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "ÔÄ•",
            "headset": "ÔÄ•",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        }
    },

    "pulseaudio#microphone": {
        "format": "{format_source}",
        "format-source": "Ô°´ {volume}%",
        "format-source-muted": "Ô°¨ Muted",
        "on-click": "pamixer --default-source -t",
        "on-scroll-up": "pamixer --default-source -i 2",
        "on-scroll-down": "pamixer --default-source -d 2",
        "scroll-step": 5
    },
    
    "network": {
        // "interface": "wlp2*", // (Optional) To force the use of this interface
        "format-wifi": "Ôá´  {signalStrength}%",
        "format-ethernet": "{ipaddr}/{cidr} Ôûñ",
        "tooltip-format": "{essid} - {ifname} via {gwaddr} Ôûñ",
        "format-linked": "{ifname} (No IP) Ôûñ",
        "format-disconnected": "Disconnected ‚ö†",
        "format-alt": "{ifname}:{essid} {ipaddr}/{cidr}",
        "on-click-right": "exec kitty nmtui"
    },

    "bluetooth": {
	    "format": "Ôäî {status}",
	    "format-disabled": "", // an empty format will hide the module
	    "format-connected": "Ôäî {num_connections}",
	    "tooltip-format": "{device_alias}",
	    "tooltip-format-connected": "Ôäî {device_enumerate}",
	    "tooltip-format-enumerate-connected": "{device_alias}"
    },
     
    "mpris": {
      "title-len": 40,
      "interval":1,
      "album-len":0,
      "max-len": 60,
      "format": "{player_icon} {dynamic}",
      "format-paused": "{player_icon} {dynamic}",
      "player-icons": {
        "default": "‚ñ∂",
        "mpv": "üéµ",
        "spotify": "ÔÜº",
        "firefox": "Ôâ©",
        "chromium": "Ôâ®"
      },
      "status-icons": {
        "paused": "Ó´ë"
      },
    },
     
    "mpd": {
      "format": "{stateIcon} {artist} -  {title} ({elapsedTime:%M:%S}/{totalTime:%M:%S})",
      "format-disconnected": "Disconnected ÔÄÅ",
      "format-stopped": "{stateIcon} {artist} -  {title} ({elapsedTime:%M:%S}/{totalTime:%M:%S})",
      "interval": 2,
      "consume-icons": {
        "on": "ÔÉÑ " // Icon shows only when "consume" is on
      },
      "repeat-icons": {
        "on": "ÔÄû "
      },
      "single-icons": {
        "on": "ÔÄû1 "
      },
      "state-icons": {
        "paused": "ÔÅå",
        "playing": "ÔÅã"
      },
      "tooltip-format": "MPD (connected)",
      "tooltip-format-disconnected": "MPD (disconnected)"
    },

    "custom/pacman": {
      "format": "ÔÑπ {}",
      "interval" : 100,
      "exec" : "~/.local/scripts/checkupdate",
      "exec-if" : "exit 0",
      "on-click": "alacritty -e paru"
    },
    
   "custom/pomodoro": {
      "exec": "i3-gnome-pomodoro status --format=waybar --show-seconds | awk '{gsub(/Pomodoro /,\"\")}1'",
       "return-type": "json",
       "interval": 1,
       "format": "ÔÄó {}",
       "on-click": "i3-gnome-pomodoro toggle",
       "on-middle-click": "i3-gnome-pomodoro stop",
       "on-right-click": "i3-gnome-pomodoro start-stop"
    },

   "custom/rofi": {
       "format": "<span font='12'>Û∞çú</span> {}",
       "on-click": "exec $HOME/.config/hyprlandscripts/menu.sh",
       "on-click-right": "killall rofi"
    }
    
}


